{
  "manifest_version": 2,
  "name": "Link Gopher Fork",
  "version": "2.1",
  "description": "Extracts and collates links from web pages",
  "default_locale": "en",
  "homepage_url": "https://github.com/andrewdbate/linkgopher/",

  "icons": {
    "16": "icons/link-gopher-16.png",
    "32": "icons/link-gopher-32.png",
    "64": "icons/link-gopher-64.png"
  },

  "permissions": [
    "tabs",
    "<all_urls>"
  ],

  "browser_action": {
    "default_icon": "icons/link-gopher-32.png",
    "default_title": "Link Gopher Fork",
    "default_popup": "popup/popup.html"
  }
}
